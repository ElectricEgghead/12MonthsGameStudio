/**
 * Program that teaches users about different societal realities using a matching game.
 * Title: What is it like to be?
 * 1/13/2020  
 **/
 
#include <iostream>
#include <string>

std::string userName;
int userAnswer;
std::string difference;
std::string userGuess;
std::string correctAnswer;


int main(){
    
    std::cout << "Hey! Welcome to WHAT IS IT LIKE TO BE?";
    std::cout << "\n\nThis app gives you quotes about different people's lived experience straight from their own mouths.\n\nTry matching the quote with the correct identity...";
    std::cout << "\n\nWe're all a little different from one another. These differences are intentional, so let's celebrate our differences!";
    std::cout << "\n\nIssues or questions? Contact the developer at electricegghead@gmail.com";
    
    std::cout << "\n\nWhat's your name? ";
    std::getline(std::cin, userName);
    std::cout << "I'm glad you're using this app, " << userName << "!";
    std::cout << "\n\nHave you ever felt like no one understood you? ";
    std::cout << "\n\nYes - 1, No - 2, Sometimes - 3";
    std::cin >> userAnswer;
    
    switch (userAnswer) {
        
    case 1: 
    std::cout << "\nMe, too. It can be hard to understand differences, and we get scared to ask questions.";    
    break;
    
    case 2:
    std::cout << "\nblah";
    break;
    
    case 3:
    std::cout << "\nblahsometimes";
    break;
    
    default:
    std::cout << "\nIt's hard...";
    } // end switch
    
    
    
 return 0;   
}
